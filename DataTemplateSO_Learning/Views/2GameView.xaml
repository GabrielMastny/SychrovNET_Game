<UserControl x:Class="DataTemplateSO_Learning.Views._2GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataTemplateSO_Learning.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.RowSpan="2" Background="White">

        </Grid>

        <Grid Grid.Column="2" Grid.RowSpan="2" Background="White">

        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="5" Background="White" x:Name="ViewBox1">
            <Image
    Source="/Images/logo_sychrovnet-26.png"
    Stretch="Uniform" />
            <Rectangle>
                <Rectangle.Fill>

                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="1,0" >

                        <GradientStop Color="#FFE30613" Offset="0"/>
                        <GradientStop Color="#FFE30613" Offset="0.5"/>
                        <GradientStop Color="Transparent" Offset="0.5"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>

                </Rectangle.Fill>
                <Rectangle.OpacityMask >
                    <ImageBrush Stretch="Uniform" ImageSource="/Images/logo_sychrovnet-26.png"/>
                </Rectangle.OpacityMask>

            </Rectangle>
          
          
        </Grid>

        <Grid Grid.Column="3" Grid.Row="0" Grid.RowSpan="5" Background="White" >
            <Image
    Source="/Images/logo_sychrovnet-26.png"
    Stretch="Uniform" />
            
            <Rectangle>
                <Rectangle.Fill>

                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="1,0" >


                        <GradientStop Color="#164194" Offset="0"/>
                        <GradientStop Color="#164194" Offset="0.6"/>
                        <GradientStop Color="Transparent" Offset="0.6"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>

                </Rectangle.Fill>
                <Rectangle.OpacityMask>
                    <ImageBrush Stretch="Uniform" ImageSource="/Images/logo_sychrovnet-26.png"/>
                </Rectangle.OpacityMask>
            </Rectangle>
            <!--         <Rectangle Opacity="0.5">
                <Rectangle.Fill>

